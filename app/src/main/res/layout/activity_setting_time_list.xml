<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_settime_list"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#263238"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_fav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/iv_detail_list_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_alarm" />

        <TextView
            android:id="@+id/tv_detail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_detail_list_title"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="เตือนก่อนเวลาออกอากาศ"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/lv_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="#eceff1"
            android:dividerHeight="1dp"
            android:fadeScrollbars="true"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="true"
            android:background="#cfd8dc"

            />
    <!-- android:cacheColorHint="#323232"-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#111"
        >

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/t_btn_save"
            android:id="@+id/bt_setttime_ok"
            android:background="#AAA"
            android:layout_marginRight="15dp"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/t_btn_cancel"
            android:id="@+id/bt_settime_cancel"
            android:background="#AAA"

            />

    </LinearLayout>
</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_settime_list"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#263238"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_alarm_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_alarm"
            />
        <ImageView
            android:id="@+id/bt_setttime_ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="265dp"
            android:src="@drawable/save"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#607d8b"
        >
        <TextView
            android:id="@+id/tv_detail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_detail_list_title"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="ช่วงเวลาเตือนก่อนออกอากาศ"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#263238"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#37474f"
        >
        <ListView
            android:id="@+id/lv_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#263238"
            android:dividerHeight="1dp"
            android:fadeScrollbars="true"
            android:choiceMode="singleChoice"
            android:background="#cfd8dc"
            />
    </LinearLayout>9
</LinearLayout>
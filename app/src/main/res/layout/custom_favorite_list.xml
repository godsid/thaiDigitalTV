<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#bebebe"
    android:id="@+id/rl_custom_fav"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_fav_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อรายการ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tv_fav_time_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="09:00-10:00"
        android:layout_below="@id/tv_fav_list_title"
        android:textSize="17dp"
        android:layout_marginTop="1dip"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tv_fav_cha_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="3 แฟมิลี่"
        android:layout_below="@id/tv_fav_time_show"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="#000000"
        />
</RelativeLayout>
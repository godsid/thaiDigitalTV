<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_detail_list"
    android:layout_height="wrap_content"
    android:background="#bebebe"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/iv_detail_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_action_camera"
    />
    <TextView
        android:id="@+id/tv_detail_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/iv_detail_list_title"
        android:layout_toRightOf="@+id/iv_detail_list_title"
        android:text="@+string/title_of_detail" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_detail_list_title"
        android:layout_marginTop="15dp"
        android:id="@+id/scrollView">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:id="@+id/tb_detail_list"
        android:scrollbars="vertical"/>

    </ScrollView>
</RelativeLayout>
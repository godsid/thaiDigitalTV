<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_settime_list"
    android:background="#455a64"
    android:weightSum="1"
    android:scrollbars="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#111111"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ic_nav_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_page"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เตือนก่อนออกอากาศ"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ic_nav_top_left"
            />

        <TextView
            android:id="@+id/tv_settime_title_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Medium Text"
            android:textColor="@color/White"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_alert"
            android:layout_toRightOf="@+id/ic_nav_top_left"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_settime_save"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_save"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/GreenGroupHighlight"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ช่วงเวลา"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
        />
        </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="380dp"
           android:background="#455a64"
           >
           <ListView
               android:id="@+id/lv_time"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:fadeScrollbars="true"
               android:choiceMode="singleChoice"
               android:background="#455a64"
               android:dividerHeight="5dp"
               android:divider="#455a64"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginBottom="5dp"
               />
       </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7e8a92"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <ToggleButton
                android:id="@+id/tgb_0"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle0"
                android:layout_marginTop="15dp"
                />
            <ToggleButton
                android:id="@+id/tgb_1"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle1"
                android:layout_toRightOf="@+id/tgb_0"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
            <ToggleButton
                android:id="@+id/tgb_2"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle2"
                android:layout_toRightOf="@+id/tgb_1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
            <ToggleButton
                android:id="@+id/tgb_3"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle3"
                android:layout_toRightOf="@+id/tgb_2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
            <ToggleButton
                android:id="@+id/tgb_4"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle4"
                android:layout_toRightOf="@+id/tgb_3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
            <ToggleButton
                android:id="@+id/tgb_5"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle5"
                android:layout_toRightOf="@+id/tgb_4"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
            <ToggleButton
                android:id="@+id/tgb_6"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle6"
                android:layout_toRightOf="@+id/tgb_5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-5dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7e8a92"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="7dp">
            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ทำซ้ำทุกสัปดาห์"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/cb_settime_repeat"
                android:button="@drawable/checkbox"
                android:layout_toRightOf="@+id/tv_check"
                android:layout_alignParentBottom="true"
                />
            </LinearLayout>
</LinearLayout>
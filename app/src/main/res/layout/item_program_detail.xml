<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">



        <TextView
            android:id="@+id/tv_col_1"
            android:paddingLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="สารคดีเที่ยงคืน Welcome to thailand"
            android:textColor="@color/Text_ListNormal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_col_2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tv_col_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="00:15 00:26"
            android:textColor="@color/Text_ListNormal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_col_3"
            android:layout_marginRight="25dp" />

        <ImageView
            android:id="@+id/tv_col_3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_onair"
            android:layout_toLeftOf="@+id/iv_col_4"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp" />

        <ImageView
            android:id="@+id/iv_col_4"
            android:src="@drawable/ic_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#111111"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_nav_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_page"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_detail_list_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ic_nav_top_left"
            android:src="@drawable/ic_thaidigitaltv"/>
        <TextView
            android:id="@+id/tv_detail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_detail_list_title"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="ThaiDigitalTV"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_device_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>


<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" >

    <LinearLayout
        android:id="@+id/ll_detail_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#455a64"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_head_1"
            android:orientation="horizontal"
            android:gravity="center_vertical">


                <ImageButton
                    android:id="@+id/iv_detail_today"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/today_btn"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false" />



                        <TextView
                            android:id="@+id/tv_detail_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="พฤหัสบดี"
                            android:textSize="19sp"
                            android:textColor="@color/White"
                            android:layout_alignTop="@+id/iv_detail_today"
                            android:layout_toLeftOf="@+id/tv_detail_date"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />


                        <TextView
                            android:id="@+id/tv_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textSize="19sp"
                            android:textColor="@color/White"
                            android:layout_alignBaseline="@+id/tv_detail_month"
                            android:layout_alignBottom="@+id/tv_detail_month"
                            android:layout_toLeftOf="@+id/tv_detail_month"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />
                        <TextView
                            android:id="@+id/tv_detail_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:text="พฤศจิกายน"
                            android:textColor="@color/White"
                            android:layout_alignBaseline="@+id/tv_detail_year"
                            android:layout_alignBottom="@+id/tv_detail_year"
                            android:layout_toLeftOf="@+id/tv_detail_year"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />
                        <TextView
                            android:id="@+id/tv_detail_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:text="2557"
                            android:textColor="@color/White"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_horizontal" />

                    <SeekBar
                        android:secondaryProgress="@android:integer/config_shortAnimTime"
                        android:id="@+id/sb_detail_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/scrubber_progress"
                        android:thumb="@drawable/scrubber_control"
                        android:thumbOffset="5dp"
                        android:layout_alignBottom="@+id/iv_detail_today"
                        android:layout_toRightOf="@+id/iv_detail_today"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:background="#455a64"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_header_program"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tb_header_program"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_header_time"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
        <TextView
            android:id="@+id/tv_header_time"
            android:layout_width="85dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/tb_header_time"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_header_status"
            android:layout_marginRight="15dp" />
        <TextView
            android:id="@+id/tv_header_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tb_header_status"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_header_fav"
            android:layout_marginRight="15dp" />
        <TextView
            android:id="@+id/tv_header_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tb_header_fav"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>


            <ListView
                android:id="@+id/lv_program_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#455a64"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"/>
            </LinearLayout>
</android.support.v4.widget.DrawerLayout>
</LinearLayout>

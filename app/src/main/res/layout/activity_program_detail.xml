<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#444"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_nav_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/back_alarm"
            />
        <ImageView
            android:id="@+id/iv_detail_list_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ic_nav_top_left"
            android:src="@drawable/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_detail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_detail_list_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Thai Digital TV"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_device_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/allshare"
            />

    </RelativeLayout>


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
<LinearLayout
    android:id="@+id/ll_detail_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <!--new-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:background="@drawable/test"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="9dp"
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp "
                android:id="@+id/iv_detail_today"
                android:background="@drawable/ic_today_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_detail_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="พฤหัสบดี"
                        android:textSize="20dp"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="30"
                        android:textSize="20dp"
                         />
                    <TextView
                        android:id="@+id/tv_detail_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:textSize="20dp"
                        android:text="ตุลาคม"
                         />
                    <TextView
                        android:id="@+id/tv_detail_year"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:text="2557"
                         />
                </LinearLayout>

            </LinearLayout>

                <SeekBar
                    android:secondaryProgress="@android:integer/config_shortAnimTime"
                    android:id="@+id/sb_detail_date"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:progressDrawable="@drawable/scrubber_progress"
                    android:thumb="@drawable/scrubber_control"
                    />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="#006064"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:paddingBottom="5dp"
        >


            <TextView
                android:id="@+id/tv_header_program"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tb_header_program"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/tv_header_time"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/tb_header_time"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/tv_header_status"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tb_header_status"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/tv_header_fav"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tb_header_fav"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>
    </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_program_detail"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                />
</LinearLayout>




    </android.support.v4.widget.DrawerLayout>
</LinearLayout>

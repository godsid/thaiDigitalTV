<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#263238"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_fav2_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_favorite"
            />
        <TextView
            android:id="@+id/tv_fav_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_fav2_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="รายการที่ชื่นชอบ"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_fav_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_all"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#cfd8dc"
        >
        <ListView
            android:id="@+id/lv_fav_show"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fadeScrollbars="true"
            android:fastScrollEnabled="true"
            android:divider="#263238"
            android:dividerHeight="1dp"
            />
    </LinearLayout>
</LinearLayout>
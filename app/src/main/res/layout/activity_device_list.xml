<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#444"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_nav_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/previous_page"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ic_nav_top_left"
            android:src="@drawable/ic_all_share_flase"
            />
        <TextView
            android:id="@+id/tv_detail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="รายชื่ออุปกรณ์"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#455a64">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lv_device_list"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_group_item"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:dividerHeight="5dp"
                    android:divider="#455a64"/>
            </LinearLayout>
</LinearLayout>

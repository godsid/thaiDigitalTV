                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_right_6"
                    android:layout_toRightOf="@+id/iv_center_0"
                    android:layout_marginLeft="65dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"/>

                <SeekBar
                    android:id="@+id/seek_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:progressDrawable="@drawable/scrubber_progress_time"
                    android:thumb="@drawable/scrubber_control_time"/>

            </RelativeLayout>
</LinearLayout>

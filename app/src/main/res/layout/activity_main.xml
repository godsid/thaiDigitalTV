<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bebebe"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#323232"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_nav_top_left"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_drawer_l" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="thaiDigitalTV"
            android:textColor="#FFFFFF"
            android:textSize="26dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ic_nav_top_right"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_drawer_exp_r" />
    </LinearLayout>


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <!-- Drawer Content -->

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCECE8"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical"
            />

        <ExpandableListView
            android:id="@+id/exp_left"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#FFFFFF"
            android:divider="#EEE"
            android:dividerHeight="2dp"
            android:groupIndicator="@drawable/group_indicator"
            />

        <ExpandableListView
            android:id="@+id/exp_right"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFFFFF"
            android:divider="#EEE"
            android:dividerHeight="2dp"

            />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>